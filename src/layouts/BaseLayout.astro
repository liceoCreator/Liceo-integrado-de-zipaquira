---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string
	description?: string
	url?: string
}
const {title, description, frontmatter, url } = Astro.props
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/escudo-75x75.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description || frontmatter.description}>
		<title>{title === 'IEM Liceo Integrado de Zipaquirá'? title : `${title || frontmatter.title} - IEM Liceo Integrado de Zipaquirá` }</title>
	</head>
	<body class="scroll-smooth scrollbar-thin scrollbar-thumb-blue-950 overflow-x-hidden" style="font-family: 'Poppins', sans-serif;">
		<main>
			<Header active={url}/>
        	<slot/>
			<Footer/>
		</main>
	</body>
</html>