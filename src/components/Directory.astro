---
import directory from '../config/directory.json'
---
<div class="w-[90%] grid grid-cols-fit gap-8 mt-4">
    {
        directory.map((person) => (
            <div class="flex flex-col items-center gap-2">
                <h5 class="text-xl">{person.name !== 'Doris Margarita'? `Lic. ${person.name}` : `Dra. ${person.name}` }</h5>
                <h6 class="font-light">{person.position}</h6>
                <img src={person.urlImg} alt={person.name} class="h-80">
                <p class="font-light" id={person.name !== 'Doris Margarita'? '' : 'sedes'}>{person.mail}</p>
                <h6 class="text-lg">Horario de atenci√≥n</h6>
                <p class="font-light">{person.parentsCareDays}</p>
                <p class="font-light">{person.parentsCareHours}</p>
            </div>
        ))
    }
</div>
